<h2>Edit your profile</h2>

<div class="container">
	<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
		<div class="form-group">
			<div class="col-md-4">
				First Name: <%= f.text_field :first_name, class: "form-control" %>
				</div>
		</div>

		<div class="form-group">
			<div class="col-md-4">
				Last Name: <%= f.text_field :last_name, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4">
			Email: <%= f.text_field :email, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4">
				Password: <%= f.password_field :password, class: "form-control" %>
			</div>
		</div>

		<div class="submit-field">
			<%= f.submit "Submit", id: "submit-button" %><br>
		</div>
	<% end %>
</div>
<%= link_to "Back to profile page", user_path(@user) %><br>