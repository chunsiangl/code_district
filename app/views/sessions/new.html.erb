
<h1>Login</h1><br>

<div class="container">
	<%= form_tag '/login', :class => "form-horizontal center" do %>
		
		<div class="form-group">
			<div class="col-md-4">
  				Email: <br><%= text_field_tag :email %><br>
  			</div>
  		</div>

  		<div class="form-group">
  			<div class="col-md-4">			
  				Password: <br><%= password_field_tag :password %><br>
  			</div>
  		</div>

  		<div class="submit-field">
  			<%= submit_tag "Submit", id: "submit-button" %>
  		</div>

	<% end %>
</div>