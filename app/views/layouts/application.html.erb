<!DOCTYPE html>
<html>
  <head>
    <title>CodeDistrict</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flash">
  <% flash.each do |key, value| -%>
  <div id="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>
</div>
  	
  	<% if current_user %>
  Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout' %><br>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %><br>
<% end %>


    <%= yield %>
  </body>
</html>
